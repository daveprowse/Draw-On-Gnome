{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "esnext"
    ],
    "module": "node16",
    "moduleResolution": "node16",
    "allowJs": true,
    // "checkJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    // "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build", // Where to put the compiled JavaScript files
    "rootDir": "./src", // Where to find the source TypeScript files
    "types": [
      "@girs/gjs",
      "@girs/gnome-shell"
    ],
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "build"
  ]
}
